/* pages/cart/index.wxss */
.address-info{
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
}

.address-info .tel{
    display: flex;
    align-items: center;
}

.address-info .tel::after{
    display: block;
    content: "";
    width: 8px;
    height: 8px;
    border-left: 1px #999 solid;
    border-top: 1px #999 solid;
    transform: rotate(135deg);
    margin-left:10px;
}


.address-detail{
    padding: 20rpx;
    padding-top:0;
}

.address image{
    width:750rpx;
    height: 15rpx;
    display: block;
}
.goods_list{

border-bottom: 20rpx #eee solid;
}
.goods-list-title {
    border-top:20rpx #eee solid;
    padding: 20rpx 16rpx;
    display: flex;
    align-items: center;
    border-bottom:1px #eee solid;
    font-size: 14px;
    color: #666;
}
.goods-list-title text {
  margin-right: 20rpx;
  color: #000;
  font-size: 14px;
}
.goods_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
  margin: 20px;
}
.goods_item icon {
  margin-right:20rpx; 
}
.goods_item image{
  width: 160rpx;
    height: 160rpx;
    flex-shrink: 0;
}
.goods_content{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.goods_title{
     display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.goods_price{
  flex:2;
  color: red;
}
.goods_number{
  display: flex;
  flex:1;
  justify-content: space-between;
  align-items: center;
}
.goods_number input {
  text-align: center;
  line-height: 0;
  font-size: 14px;
}
.calc-button{
  border: 1px solid #ccc;
  padding: 5px;
}
.checkout{
  border-top: 1px solid #ccc; 
    position: fixed;
    left: 0; 
    bottom: 0px;
    width: 750rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    z-index: 9;
}

.allselect{
    padding: 20rpx;
    display: flex;
    align-items: center;
}

.allselect icon{
    margin-right: 20rpx;
}

.allprice{
    flex: 1;
    padding:0 20px;
}

.allprice-top text{
    color:red;
}

.allprice-top text text{
    font-size: 12px;
}

.allprice-btm{
    color: #999;
    font-size: 12px;
}

.checkout-btn{
    width: 30%;
    height: 100%;
    background: #ff2d4a;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}