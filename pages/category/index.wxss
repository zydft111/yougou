/* pages/category/index.wxss */
.content{
    position: fixed;
    top: 100rpx;
    bottom: 0;
    width: 750rpx;
    display: flex;
    justify-content: space-between
}
.leftSlide{
    width: 200rpx;
    height: 100%;
    flex-shrink: 0;
    background: #eee;
    overflow: auto;
}
.leftSlide .menu-item{
    position: relative;
    padding: 20rpx 0;
    text-align: center;
    border-bottom: 1px #ddd solid;
}
.active{
    background:#fff;
    color: red;
}
.active:before{
    display: block;
    content:  "";
    width: 2px;
    height: 16px;
    background: red;
    position: absolute;
    left: 0;
    top:50%;
    transform: translateY(-8px)
}
.rightSlide {
  flex: 1;
  overflow: auto;
}
.categoryTitle{
    text-align: center;
    padding: 20rpx;
    color: #ccc;
}
.categoryTitle text{
    margin: 0 20rpx;
    color:#000;
}
.productList{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.productList navigator{
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    width:33.33%;
    overflow: hidden;
    font-size: 12px;
    padding: 10rpx;
    box-sizing: border-box;
}

.productList navigator image{
    width:120rpx;
    /* height: 120rpx; */
}